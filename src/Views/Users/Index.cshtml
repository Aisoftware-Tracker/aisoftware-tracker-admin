@model IEnumerable<Aisoftware.Tracker.Admin.Models.User>

<section class="content-header">
    <h1>
        Usuários
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Dasheboard</a></li>
        <li class="active">Usuários</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Gerenciar Usuários</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body overflow-x">
                    <table id="data-table" class="table table-bordered table-striped display nowrap" style="width:100%">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Email</th>
                                <th>Telefone</th>
                                <th>Somente Leitura</th>
                                <th>Administrador</th>
                                <th>Desabilitado</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Readonly)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Administrator)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Disabled)</td>
                                    <td>
                                        <a href="@ViewBag.ControllerName/Update/@item.Id"
                                        class="btn btn-block btn-primary">Editar</a>
                                        <a href="" class="btn btn-block btn-danger" onclick="Delete('@item.Id')">Excluir</a>
                                    </td>
                                </tr>
                            }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>

<!-- page script -->
<script>
    $(function () {
        $('#data-table').DataTable({
            @* "pagingType": "full_numbers", *@
            "language": {
                "sProcessing": "Buscando ...",
                "sLengthMenu": "Mostrar _MENU_ registos",
                "sZeroRecords": "Não foram encontrados resultados",
                "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registos",
                "sInfoEmpty": "Mostrando de 0 até 0 de 0 registos",
                "sInfoFiltered": "(filtrado de _MAX_ registos no total)",
                "sInfoPostFix": "",
                "sSearch": "Pesquisar:",
                "sUrl": "",
                "oPaginate": {
                    "sFirst": "Primeiro",
                    "sPrevious": "Anterior",
                    "sNext": "Seguinte",
                    "sLast": "Último"
                }
            }
        });
    });
    function Delete(id) {
        var txt;
        var r = confirm("Você tem certeza que deseja excluir este usuário?");
        if (r == true) {

            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("Delete", "Users")',
                    data: {
                        id: id
                    },
                    error: function (result) {
                        alert("error");
                    },
                    success: function (result) {
                        if (result == true) {
                            var baseUrl = "/Users";
                            window.location.reload();
                        }
                        else {
                            alert("Houve um problema inesperado, Tente novamente mais tarde!");
                        }
                    }
                });
        }
    }
</script>