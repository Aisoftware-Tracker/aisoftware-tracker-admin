@model IEnumerable<Aisoftware.Tracker.Admin.Models.Device>

<section class="content-header">
    <h1>
        Dispositivos/Veículos
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Dasheboard</a></li>
        <li class="active">Dispositivos</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Gerenciar Dispositivos</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body overflow-x">
                    <table id="data-table" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Identificador</th>
                                <th>Categoria</th>
                                <th>Contrato</th>
                                <th>Desabilitado</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UniqueId)</td>
                                    <td><i class="@Aisoftware.Tracker.Admin.Domain.Devices.Models.Category.GetIcons()[string.IsNullOrEmpty(item.Category)
                                        ? "null" : item.Category] 
                                        @(item.Status == "online" ? "on" : "off")">
                                        </i>
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Disabled)</td>
                                    <td>
                                        <a href="@ViewBag.ControllerName/Update/@item.Id"
                                        class="btn btn-block btn-primary">Editar</a>
                                        <a href="" class="btn btn-block btn-danger" onclick="Delete('@item.Id')">Excluir</a>
                                    </td>
                                </tr>
                            }
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

<!-- DataTables -->
<script src="~/bower_components/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js"></script>
<script src="~/dist/js/dataTablesConfig.js"></script>

<style>
    .on {
        color: #198754;
    }

    .off {
        color: #dc3545;
    }
    .overflow-x {
        width: auto;
        overflow-x: scroll;
        white-space: nowrap;
    }
</style>

<!-- page script -->
<script>
    function Delete(id) {
        var txt;
        var r = confirm("Você tem certeza que deseja excluir este usuário?");
        if (r == true) {

            $.ajax(
                {
                    type: "POST",
                    url: '@Url.Action("Delete", "@ViewBag.ControllerName")',
                    data: {
                        id: id
                    },
                    error: function (result) {
                        alert("error");
                    },
                    success: function (result) {
                        if (result == true) {
                            var baseUrl = "/@ViewBag.ControllerName";
                            window.location.reload();
                        }
                        else {
                            alert("Houve um problema inesperado, Tente novamente mais tarde!");
                        }
                    }
                });
        }
    }
</script>