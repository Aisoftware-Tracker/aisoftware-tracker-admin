<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Dispositivos/Veículos
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Cadastrar Dispositivos</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal">
            <div class="box-body">
                <div class="form-group">
                    <label for="Name" class="col-sm-2 control-label">Placa</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Name" placeholder="Nome">
                    </div>
                </div>
                <div class="form-group">
                    <label for="UniqueId" class="col-sm-2 control-label">Identificador</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="UniqueId" placeholder="Identificador">
                    </div>
                </div>
                @* <div class="form-group">
                    <label for="Photo" class="col-sm-2 control-label">Imagem</label>
                    <div class="col-sm-10">
                    <div class="custom-file">
                    <input type="file" class="form-control" id="Photo">
                    <label class="custom-file-label" for="Photo">Escolha o arquivo</label>
                    </div>
                    </div>
                    </div> *@
                <div class="form-group">
                    <label for="Document" class="col-sm-2 control-label">Documento</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="Document" placeholder="Documento">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Category" class="col-sm-2 control-label">Categoria</label>
                    <div class="col-sm-10">
                        <select class="form-control" name="Category">
                            <option value="">Selecione uma Categoria</option>
                            @foreach (var item in Aisoftware.Tracker.Admin.Domain.Devices.Models.Category.Get())
                            {                                
                                <option value=@Html.DisplayFor(modelItem => item.Key)>@Html.DisplayFor(modelItem => item.Value)</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="DocumentValidAt" class="col-sm-2 control-label">Válido até</label>
                    <div class="col-sm-10">
                        <input type="datetime-local" class="form-control" name="DocumentValidAt">
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" class="btn btn-default" formaction="Cancel" formmethod="post">Voltar</button>
                <button type="submit" class="btn btn-info pull-right" formaction="CreateDevice"
                    formmethod="post">Cadastrar</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>